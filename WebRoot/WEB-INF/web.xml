<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>

	<!--
		Key of the system property that should specify the root directory of this
		web app. Applied by WebAppRootListener or Log4jConfigListener.
	-->	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>rms.root</param-value>
	</context-param>
	
	<!--
		Hibernate配置文件
	-->		
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext-hibernate.xml
		</param-value>
	</context-param>

	<!--配置 log4j 配置文件 路径-->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/logs/log4j.properties</param-value>
	</context-param>

	<!-- session 有效时间 -1为永久有效。非-1单位为分-->
	<session-config>
		<session-timeout>180</session-timeout>
	</session-config>

	<!-- 缓存问题 -->
	<filter>
		<filter-name>forceNoCacheFilter</filter-name>
		<filter-class>
			com.netsky.base.web.filter.ForceNoCacheFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>forceNoCacheFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>


	<!-- 中文编码 -->
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>
			com.netsky.base.web.filter.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!--
		-log4j监听器
	-->
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>

	<!-- 加载Spring Context -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>rms</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>loadShareServLet</servlet-name>
		<servlet-class>
			com.netsky.base.controller.LoadShareServLet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>rms</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	
	<!-- 文件类型解析 -->
	<mime-mapping>
		<extension>dwg</extension>
		<mime-type>application/dwg</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>htc</extension>
		<mime-type>text/x-component</mime-type>
	</mime-mapping>
	
	<jsp-config>
		<taglib>
	    	<taglib-uri>NetSkyTagLibs</taglib-uri>
	    	<taglib-location>/WEB-INF/NetSky.tld</taglib-location>
	  	</taglib>
  	</jsp-config>
  	
  	<servlet>
	  <servlet-name>faceUpload</servlet-name>
	  <servlet-class>com.netsky.base.imagecut.SaveImageServlet</servlet-class>
  	</servlet>
 	<servlet-mapping>
      <servlet-name>faceUpload</servlet-name>
 	  <url-pattern>/faceUpload.do</url-pattern>
  	</servlet-mapping>
  	
	<listener>  
        <listener-class>com.rms.listener.Thread_Listener</listener-class>   
    </listener>
</web-app>
